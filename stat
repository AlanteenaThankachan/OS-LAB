#include <sys/types.h>
#include <unistd.h>
#include <stdio.h>
#include <sys/stat.h>
#include<struct.h>
void main()
{
char*path,path1[10];
struct stat*nfile;
nfiles=(struct stat*)malloc(sizeof(struct stat);
printf("Enter the filename=");
scanf("%s",path1);
stat(path,path1);
printf("User id;%d\n",nfile->st_uid);
printf("Blocksize;%1d\n",nfile->st_blksize);
printf("Last access time ;%d\n",nfile->st_atime);
printf("last modification;%d\n",nfile->st_mtime);
printf("Production mode;%d\n",nfile->st_mode);
printf("size of file d;%d\n",nfile->st_size);
printf("number of links ;%d\n",nfile->st_nlink);
}
